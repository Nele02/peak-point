{{> menu active="admin-users"}}

<section class="section">
  <h1 class="title">User Administration</h1>

  <table class="table is-fullwidth">
    <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each users}}
      <tr>
        <td>{{this.firstName}} {{this.lastName}}</td>
        <td>{{this.email}}</td>
        <td>
          <a href="/admin/users/{{_id}}/delete" class="button">
            <i class="fas fa-trash"></i>
          </a>
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</section>
